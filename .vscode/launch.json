{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch Shell",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/shell", 
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "build" // 디버깅 시작 전 자동으로 빌드하도록 설정
    }
  ]
}